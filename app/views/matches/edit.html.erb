<h2>試合結果を登録</h2>

<%= form_with model: @match, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :result, "勝者を選択", class: "form-label" %>
    <%= f.select :result, [["Player 1", "player1"], ["Player 2", "player2"], ["引き分け", "draw"]], {}, class: "form-select" %>
  </div>
  <%= f.submit "結果を登録", class: "btn btn-primary" %>
<% end %>